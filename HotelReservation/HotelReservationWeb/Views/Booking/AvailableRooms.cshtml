@model IEnumerable<Room>
@{
    ViewData["Title"] = "Available Rooms";
}

<div class="hero-wrap" style="background-image: url('/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <h1 class="mb-4 bread">Available Rooms</h1>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="ftco-section bg-light">
    <div class="container">
        @if (Model.Count() == 0)
        {
            <div class="row justify-content-center">
                <div class="col-12">
                    <h3 class="text-center">There is no Available Rooms</h3>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-lg-10 offset-1">
                <div class="row">
                    @foreach (var room in Model)
                    {
                        <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                            <div class="room">
                                <div class="text p-3 text-center">
                                    <div>
                                        <h3 class="mb-3"><a href="#">@room.RoomName</a></h3>
                                        <hr />
                                    </div>
                                    <p><span class="price mr-2">EGP @room.Price</span> <span class="per">per night</span></p>
                                    <ul class="list">
                                        <li><span>Max:</span> @room.Type.MaxGuestNo Persons</li>
                                        <li><span>View:</span> @room.View View</li>
                                        <li><span>Room Number:</span> @room.RoomId</li>
                                    </ul>
                                    <hr>
                                    <p class="pt-1">
                                        @Html.ActionLink("Book Now", "Reservation", "Booking",
                                   new { id = room.RoomId }, null)
                                </p>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</section>


<!-- loader -->
<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>
