@model BookRoom
@{
    ViewData["Title"] = "Booking Room";
}

<div class="hero-wrap" style="background-image: url('/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <h1 class="mb-4 bread">Book your Room</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section contact-section bg-light">
    <div class="container">
        <div class="row block-9 justify-content-center">
            <div class="col-md-6 order-md-last d-flex">
                <form asp-action="AddReservation" asp-controller="Booking" method="post" class="bg-white p-5 contact-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="RoomId" type="hidden" value="@Context.Request.RouteValues["id"]" />
                        <input asp-for="guest.GuestId" type="text" class="form-control" placeholder="National ID">
                        <span asp-validation-for="guest.GuestId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="guest.FirstName" type="text" class="form-control" placeholder="Your First Name">
                        <span asp-validation-for="guest.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="guest.LastName" type="text" class="form-control" placeholder="Your Last Name">
                        <span asp-validation-for="guest.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="guest.Email" type="email" class="form-control" placeholder="Your Email">
                        <span asp-validation-for="guest.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="guest.Phone" type="text" class="form-control" placeholder="Your Phone">
                        <span asp-validation-for="guest.Phone" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group justify-content-center">
                        <input type="submit" value="Book Room" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>


<!-- loader -->
<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>