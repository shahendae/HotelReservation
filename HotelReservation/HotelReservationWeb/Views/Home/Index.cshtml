@model CheckRooms
@{
    ViewData["Title"] = "Home Page";
}

    <section class="home-slider owl-carousel">
        <div class="slider-item" style="background-image:url(/images/bg_1.jpg);">
            <div class="overlay"></div>
            <div class="container">
                <div class="row no-gutters slider-text align-items-center justify-content-center">
                    <div class="col-md-12 ftco-animate text-center">
                        <div class="text mb-5 pb-3">
                            <h1 class="mb-3">Relax Your Mind</h1>
                            <h2>Book your stay</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-booking">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-controller="Booking" asp-action="AvailableRooms"  method="post" class="booking-form">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-md-3 d-flex">
                                <div class="form-group p-4 align-self-stretch d-flex align-items-end">
                                    <div class="wrap">
                                        <label asp-for="CheckIn">Check-in Date</label>
                                        <input asp-for="CheckIn" type="text" value="@DateTime.Now" class="form-control checkin_date" placeholder="Check-in date">
                                        <span asp-validation-for="CheckIn" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex">
                                <div class="form-group p-4 align-self-stretch d-flex align-items-end">
                                    <div class="wrap">
                                        <label asp-for="CheckOut">Check-out Date</label>
                                        <input asp-for="CheckOut" value="@DateTime.Now" type="text" class="form-control checkout_date" placeholder="Check-out date">
                                        <span asp-validation-for="CheckOut" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md d-flex">
                                <div class="form-group p-4 align-self-stretch d-flex align-items-end">
                                    <div class="wrap">
                                        <label for="#">Room</label>
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                @Html.DropDownListFor(model => model.TypeId, Model.RoomTypes, "Select Room Type",
                                               htmlAttributes: new { @class = "form-control", id = "TypeId" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md d-flex">
                                <div class="form-group d-flex align-self-stretch">
                                    <input type="submit" value="Check Availability" class="btn btn-primary py-3 px-4 align-self-stretch">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-7 heading-section text-center ftco-animate">
                    <h2 class="mb-4">Our Rooms</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                    <div class="room">
                        <a href="#" class="img d-flex justify-content-center align-items-center" style="background-image: url(images/room-1.jpg);">
                        </a>
                        <div class="text p-3 text-center">
                            <h3 class="mb-3"><a href="#">Single Room</a></h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                    <div class="room">
                        <a href="rooms.html" class="img d-flex justify-content-center align-items-center" style="background-image: url(images/img_5.jpg);">
                        </a>
                        <div class="text p-3 text-center">
                            <h3 class="mb-3"><a href="#">Double Room</a></h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                    <div class="room">
                        <a href="#" class="img d-flex justify-content-center align-items-center" style="background-image: url(images/room-3.jpg);">
                        </a>
                        <div class="text p-3 text-center">
                            <h3 class="mb-3"><a href="#">Deluxe Room</a></h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                    <div class="room">
                        <a href="#" class="img d-flex justify-content-center align-items-center" style="background-image: url(images/room-2.jpg);">
                        </a>
                        <div class="text p-3 text-center">
                            <h3 class="mb-3"><a href="#">Family Room</a></h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                    <div class="room">
                        <a href="#" class="img d-flex justify-content-center align-items-center" style="background-image: url(images/img_2.jpg);">
                        </a>
                        <div class="text p-3 text-center">
                            <h3 class="mb-3"><a href="#">Suite Room</a></h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                    <div class="room">
                        <a href="#" class="img d-flex justify-content-center align-items-center" style="background-image: url(images/room-6.jpg);">
                        </a>
                        <div class="text p-3 text-center">
                            <h3 class="mb-3"><a href="#">Luxury Room</a></h3>
